[Unit]
Description=Etcd Server
After=network.target
After=network-online.target
Wants=network-online.target
Documentation=https://github.com/coreos

[Service]
Type=notify
WorkingDirectory=/var/lib/etcd/
ExecStart=/usr/local/kubernetes-bins//etcd \
  --name=192.168.202.61 \
  --listen-client-urls=http://192.168.202.61:2379,http://127.0.0.1:2379 \
  --advertise-client-urls=http://192.168.202.61:2379 \
  --data-dir=/var/lib/etcd
Restart=on-failure
RestartSec=5
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
